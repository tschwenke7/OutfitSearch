<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/imageview_outfit_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/content_description_outfit_photo"

            android:src="@drawable/photo_placeholder"
            android:visibility="gone"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/item_names_loading_spinner"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:visibility="visible"
            tools:visibility="gone" />

        <TextView
            android:id="@+id/textview_outfit_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"

            android:visibility="gone"
            tools:text="Pink shirt, black skirt, brown boots"
            tools:visibility="visible" />
    </LinearLayout>


</androidx.cardview.widget.CardView>